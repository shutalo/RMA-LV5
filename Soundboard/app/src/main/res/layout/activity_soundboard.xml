<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/ibMamic"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/mamic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/ibMusk"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/musk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ibMamic"
        app:layout_constraintBottom_toTopOf="@id/ibZuckerberg"/>

    <ImageButton
        android:id="@+id/ibZuckerberg"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/zuckerberg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>